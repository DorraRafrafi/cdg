{% trans_default_domain 'FOSUserBundle' %}


    {% block stylesheet %}
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/style.css" type="text/css">

    <style>
        body {
            /* background-color: aqua; */
           background-image: url('http://127.0.0.1:8887/05.PNG');
            background-repeat: no-repeat;
        }
        .btn {
            
            color: #fff !important;
        }

    </style>

    {% endblock stylesheet %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<body>





<div class="container .mr-3">
<div class="col-md-6"></div>
<div class="col-md-6">
<form action="{{ path("fos_user_security_check") }}" method="post">
    
    
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
<br> <br> <br> <br> <br> <br>
<div class="form-group">
    <label for="username">Nom d'utilisateur</label>
    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="admin@mobiblanc.com" />
</div>


<div class="form-group">
    <label for="password">Mot de passe</label>    
    <input type="password" class="form-control" id="password" name="_password" required="required" autocomplete="current-password" placeholder="*********" />
</div>


<div class="checkbox">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">Se souvenir de moi </label>
</div>


        
<div class="form-group">
    <label> Mot de passe oubli√© ? </label>
    <input type="submit" class="btn" style="background-color:#6c8a32" id="_submit" name="_submit" value="connexion" />
</div>

</form>
</div>
</div>
</body>
